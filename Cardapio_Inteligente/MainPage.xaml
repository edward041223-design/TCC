<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cardapio_Inteligente.MainPage"
             NavigationPage.HasNavigationBar="False">

    <VerticalStackLayout VerticalOptions="Center" Padding="20" Spacing="20" BackgroundColor="{StaticResource Background}">
        <Image Source="logo.png" WidthRequest="160" HeightRequest="160" HorizontalOptions="Center" />

        <Label Text="Cardápio Inteligente" Style="{StaticResource TitleLabel}" />

        <Button x:Name="btn_VerCardapio" Text="Ver Cardápio" Style="{StaticResource PrimaryButton}" Clicked="btn_VerCardapio_Clicked"/>

        <Button x:Name="btn_JaSouCliente" Text="Já sou cliente" Style="{StaticResource GhostButton}" Clicked="btn_JaSouCliente_Clicked" />
    </VerticalStackLayout>
</ContentPage>
